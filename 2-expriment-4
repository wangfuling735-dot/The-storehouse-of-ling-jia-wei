#include <stdio.h>

int main() {
    char ch;
    printf("请输入一个字符：");
    scanf("%c", &ch);

    printf("The eighth bit is %d,\n", (ch & 0x80) ? 1 : 0);
    printf("The seventh bit is %d,\n", (ch & 0x40) ? 1 : 0);
    printf("The sixth bit is %d,\n", (ch & 0x20) ? 1 : 0);
    printf("The fifth bit is %d,\n", (ch & 0x10) ? 1 : 0);
    printf("The fourth bit is %d,\n", (ch & 0x08) ? 1 : 0);
    printf("The third bit is %d,\n", (ch & 0x04) ? 1 : 0);
    printf("The second bit is %d,\n", (ch & 0x02) ? 1 : 0);
    printf("The first bit is %d.\n", (ch & 0x01) ? 1 : 0);

    return 0;

}

